<h1>Edit <%= @event.name %></h1>

<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :date %>
  <%= f.date_field :date %><br>

  <%= f.label :budget %>
  <%= f.number_field :budget %><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.submit "Update" %>
<% end %>
  